{
  "name": "FitSync AI - Personal Fitness Assistant",
  "short_name": "FitSync AI",
  "description": "AI-powered fitness assistant for personalized workouts, nutrition planning, and progress tracking",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#000000",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "categories": ["health", "fitness", "lifestyle"],
  "lang": "en",
  "dir": "ltr",
  "scope": "/",
  "prefer_related_applications": false,
