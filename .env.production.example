# FitSync AI - Enhanced Backend Environment Configuration
# Copy this file to .env.local and fill in your production values

# ==============================================
# CORE APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1
LOG_LEVEL=info

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Railway PostgreSQL URL (automatically provided)
DATABASE_URL=postgresql://username:password@host:port/database_name

# ==============================================
# REDIS CONFIGURATION  
# ==============================================
# Railway Redis URL (automatically provided)
REDIS_URL=redis://default:password@host:port
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# AUTHENTICATION & SECURITY
# ==============================================
# Generate a strong secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production-32-chars-minimum
NEXTAUTH_URL=https://your-domain.railway.app

# JWT Configuration
JWT_SECRET=another-super-secret-key-for-jwt-tokens

# ==============================================
# GOOGLE OAUTH (OPTIONAL)
# ==============================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ==============================================
# AI SERVICE CONFIGURATION
# ==============================================
# OpenAI API Key (required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# ==============================================
# NUTRITION API KEYS (OPTIONAL)
# ==============================================
# USDA FoodData Central API Key
USDA_API_KEY=your-usda-api-key

# Spoonacular API Key  
SPOONACULAR_API_KEY=your-spoonacular-api-key

# ==============================================
# EXTERNAL FITNESS APIs (OPTIONAL)
# ==============================================
# RapidAPI Key for ExerciseDB
RAPIDAPI_KEY=your-rapidapi-key

# ==============================================
# EMAIL CONFIGURATION (OPTIONAL)
# ==============================================
# SendGrid Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@yourdomain.com

# SMTP Configuration (alternative to SendGrid)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ==============================================
# FILE STORAGE (OPTIONAL)
# ==============================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Cloudinary Configuration (alternative)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-secret

# ==============================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==============================================
# Sentry Error Tracking
SENTRY_DSN=your-sentry-dsn

# Google Analytics
NEXT_PUBLIC_GA_ID=your-google-analytics-id

# New Relic Monitoring
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key

# ==============================================
# CORS & SECURITY CONFIGURATION
# ==============================================
# Allowed origins (comma-separated)
ALLOWED_ORIGINS=https://your-domain.railway.app,https://www.your-domain.com

# ==============================================
# RATE LIMITING CONFIGURATION
# ==============================================
# Rate limiting settings (requests per time window)
RATE_LIMIT_AUTH=5_per_15min
RATE_LIMIT_AI=20_per_minute
RATE_LIMIT_API=1000_per_15min

# ==============================================
# QUEUE CONFIGURATION
# ==============================================
# Background job settings
QUEUE_CONCURRENCY_AI=3
QUEUE_CONCURRENCY_EMAIL=5
QUEUE_CONCURRENCY_ANALYTICS=10

# ==============================================
# FEATURE FLAGS (OPTIONAL)
# ==============================================
# Enable/disable specific features
FEATURE_AI_CHAT=true
FEATURE_SOCIAL_LOGIN=true
FEATURE_PUSH_NOTIFICATIONS=false
FEATURE_PREMIUM_FEATURES=false

# ==============================================
# DEVELOPMENT TOOLS (DEVELOPMENT ONLY)
# ==============================================
# Only set these in development
# NEXT_PUBLIC_VERCEL_URL=your-preview-url
# SKIP_ENV_VALIDATION=true

# ==============================================
# RAILWAY SPECIFIC (AUTOMATICALLY SET)
# ==============================================
# These are automatically set by Railway - do not modify
# RAILWAY_STATIC_URL=https://your-app-name.railway.app
# RAILWAY_ENVIRONMENT=production
# PORT=3000